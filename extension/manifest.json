{
    "manifest_version": 3,
    "name": "LockedOut Chrome Extension",
    "version": "1.0",
    "description": "Blocks distracting websites.",
    "permissions": [
      "storage",
      "alarms",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "host_permissions": [
      "<all_urls>",
      "http://localhost:3000/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "declarative_net_request": {
      "rule_resources": [{
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }]
    },
    "web_accessible_resources": [{
      "resources": ["blocked.html", "blocked.css", "blocked.js"],
      "matches": ["<all_urls>"]
    }]
  }
  